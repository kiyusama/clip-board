generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id //clerkのidを使う
  username String?
  clipboards ClipBoard[]
}

model ClipBoard {
  id String @id @default(uuid())
  title String
  content String?
  author User @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String
  isHidden Boolean @default(false)//contentをマスキングするか
}